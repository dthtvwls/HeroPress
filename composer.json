{
  "autoload": {
    "psr-4": { "HeroPress\\": "src/" }
  },
  "config": {
    "process-timeout": 0
  },
  "require": {
    "php": ">=5.4.0",
    "aura/auth": "2.0.0-beta2",
    "aura/session": "~2.0.0",
    "ezyang/htmlpurifier": "~4.6.0",
    "sendgrid/sendgrid": "~2.2.1",
    "slim/slim": "~2.6.2",
    "zordius/lightncandy": "0.20"
  },
  "require-dev": {
    "codeclimate/php-test-reporter": "~0.1.2",
    "heroku/heroku-buildpack-php": "*",
    "ircmaxell/password-compat": "~1.0.4",
    "leafo/lessphp": "~0.5.0",
    "phpunit/phpunit": "~4.5.0",
    "satooshi/php-coveralls": "~0.6.1",
    "scrutinizer/ocular": "~1.1.1",
